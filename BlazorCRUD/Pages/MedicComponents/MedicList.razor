@page "/medic"
@using BlazorCRUD.Data
@inject MedicRepository medicRepository

<NavLink class="nav-link" href="AddMedic">
    <span class="oi oi-plus" aria-hidden="true"></span>Add
</NavLink>

<h1>Medics Information</h1>
@if (objMedics == null)
{
<p><em>Loading....</em></p> }
            else
            {
<table class="table">
    <thead>
        <tr>
            <th>Medic Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Specialty</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var med in objMedics)
        {
<tr>
    <td>@med.MedicId</td>
    <td>@med.SurName</td>
    <td>@med.Gender</td>
    <td>@med.Specialty</td>

    <td>@med.Salary</td>
    <td>
        <a class="nav-link" href="EditEmployee/@med.MedicId">
            <span class="oi oi-pencil" aria-hidden="true"></span>Edit
        </a>
        <a class="nav-link" href="DeleteEmployee/@med.MedicId">
            <span class="oi oi-trash" aria-hidden="true"></span>Delete
        </a>
    </td>
</tr>}
    </tbody>
</table>}

@code { List<Medic> objMedics;
    protected override async Task OnInitializedAsync()
    {
        objMedics = await Task.Run(() => medicRepository.GetMedics());
    }
      }
