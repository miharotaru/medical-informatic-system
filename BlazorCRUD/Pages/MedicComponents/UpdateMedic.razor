@page "/update-medic/{CurrentID}"
@using BlazorCRUD.Data
@inject MedicRepository medicRepository
@inject NavigationManager NavigationManager

<h2>Update Medic</h2>
<hr />
<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <input for="Id" class="form-control" @bind="@objMedic.MedicId" />
            </div>
            <div class="form-group">
                <label for="FirstName" class="control-label">First Name</label>
                <input form="FirstName" class="form-control" @bind="@objMedic.FirstName" />
            </div>
            <div class="form-group">
                <label for="LastName" class="control-label">Last Name</label>
                <input form="LastName" class="form-control" @bind="@objMedic.LastName" />
            </div>
            <div class="form-group">
                <label for="Gender" class="control-label"></label>
                <select @bind="@objMedic.Specialty" class="form-control">
                    <option value="">--Select Gender--</option>
                    <option value="Cardiology">Cardiology</option>
                    <option value="Hematology">Hematology</option>
                    <option value="Psychology">Psychology</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@UpdateMedicInfo" value="Update" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code {
    [Parameter]
    public string CurrentID { get; set; }
    Medic objMedic = new Medic();

    protected override async Task OnInitializedAsync()
    {
        objMedic = await Task.Run(()=>medicRepository.GetMedicById(Convert.ToInt32(CurrentID)));
    }

    protected void UpdateMedicInfo()
    {
        medicRepository.UpdateMedic(objMedic);
        NavigationManager.NavigateTo("MedicList");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("MedicList");
    }
}
