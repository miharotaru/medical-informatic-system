@page "/delete-medic/{CurrentID}"
@using BlazorCRUD.Data
@inject MedicRepository objMedService
@inject NavigationManager NavigationManager

<h2>Delete Medic</h2>
<hr />
<h3>Are you sure want to delete this medic?</h3>

<div class="row">
    <div class="col-md-8">
        <div class="form-group">
            <label>Employee ID:</label>
            <label>@objMedic.MedicId</label>
        </div>
        <div class="form-group">
            <label>Name:</label>
            <label>@objMedic.SurName</label>
        </div>
        <div class="form-group">
            <label>Gender:</label>
            <label>@objMedic.Gender</label>
        </div>
        <div class="form-group">
            <label>Country:</label>
            <label>@objMedic.Specialty</label>
        </div>
        <div class="form-group">
            <label>City:</label>
            <label>@objMedic.LastName</label>
        </div>
        </div>
    </div>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <input type="button" class="btn btn-danger" @onclick="@DeleteMedicInfo" value="Delete" />
            <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string CurrentID { get; set; }
    Medic objMedic = new Medic();

    protected override async Task OnInitializedAsync()
    {
        objMedic = await Task.Run(() => objMedService.GetEmployeeById(Convert.ToInt32(CurrentID)));
    }

    protected void DeleteMedicInfo()
    {
        objMedService.DeleteEmpInfo(objMedic);
        NavigationManager.NavigateTo("Medic");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("Medic");
    }
}
